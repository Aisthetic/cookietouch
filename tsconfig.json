{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["cookie/*"],
      "@account": ["cookie/account"],
      "@account/*": ["cookie/account/*"],
      "@game/*": ["cookie/game/*"],
      "@protocol/*": ["cookie/protocol/*"],
      "@utils/*": ["cookie/utils/*"],
      "@logger": ["cookie/core/logger"],
      "@logger/*": ["cookie/core/logger/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
